<%= form_with(model: vendor) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :country %>
    <%= form.text_field :country, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :metadata %>
    <%= form.text_field :metadata, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sources %>
    <%= form.text_field :sources, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), vendors_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), vendor_path(@vendor), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
