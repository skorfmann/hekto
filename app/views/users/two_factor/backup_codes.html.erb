<div class="max-w-xl mx-auto mt-12 p-8 bg-white rounded border border-gray-200 dark:bg-gray-900 dark:border-gray-700">
  <h3><%= t ".header" %></h3>
  <p class="mb-4 text-sm text-gray-700 dark:text-gray-300"><%= t ".description" %></p>

  <div class="notice notice-warning mb-4" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
    </svg>
    <p class="leading-normal"><%= t ".warning" %></p>
  </div>

  <div class="grid grid-cols-2 mb-4 text-center">
    <% current_user.otp_backup_codes.each do |code| %>
      <div><code class="text-black dark:text-gray-50 font-bold"><%= code %></code></div>
    <% end %>
  </div>

  <p class="text-sm text-gray-700 dark:text-gray-300"><%= t ".save_codes" %></p>

  <hr class="my-4 border-gray-200">

  <div class="flex justify-between items-center">
    <%= link_to t(".cancel"), edit_account_password_path, class: "btn btn-secondary" %>
    <%= link_to t(".next"), verify_user_two_factor_path, class: "btn btn-primary" %>
  </div>
</div>
