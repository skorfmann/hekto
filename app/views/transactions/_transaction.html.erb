<tr id="<%= dom_id transaction %>" class="<%= transaction.amount.negative? ? 'bg-red-50 hover:bg-red-100 dark:bg-red-800 dark:hover:bg-red-700' : 'bg-green-50 hover:bg-green-100 dark:bg-green-800 dark:hover:bg-green-700' %>">
  <td class="px-6 py-4 whitespace-nowrap">
    <%= transaction.counterparty_name %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= transaction.date %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= number_to_currency(transaction.amount, unit: transaction.currency) %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= link_to "View", transaction, class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" %>
  </td>
</tr>