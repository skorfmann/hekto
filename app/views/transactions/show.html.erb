<%= content_for :title, "Transactions ##{@transaction.id}" %>
<%= turbo_stream_from @transaction %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Transactions", transactions_path, class: "text-black dark:text-white" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Transaction #<%= @transaction.id %>
    </h1>
    <%= link_to t("edit"), edit_transaction_path(@transaction), class: "btn btn-secondary" %>
  </div>

  <div class="p-8 bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded shadow">
    <%= render @transaction %>
  </div>
</div>
