<%= form_with(model: bank_account) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_type %>
    <%= form.text_field :account_type, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), bank_accounts_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), bank_account_path(@bank_account), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
