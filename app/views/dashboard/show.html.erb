<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6"><%= t(".title") %></h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-lg font-semibold mb-2">Documents</h2>
      <p class="text-3xl font-bold"><%= @document_count %></p>
    </div>
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-lg font-semibold mb-2">Vendors</h2>
      <p class="text-3xl font-bold"><%= @vendor_count %></p>
    </div>
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-lg font-semibold mb-2">Transactions</h2>
      <p class="text-3xl font-bold"><%= @transaction_count %></p>
    </div>
  </div>

  <div class="bg-white p-4 rounded shadow">
    <h2 class="text-xl font-semibold mb-4">Recent Documents</h2>
    <% if @recent_documents.any? %>
      <ul class="divide-y">
        <% @recent_documents.each do |document| %>
          <li class="py-2">
            <%= link_to document.name || "Document #{document.id}", document_path(document), class: "text-blue-600 hover:underline" %>
            <span class="text-gray-500 text-sm ml-2"><%= l(document.created_at, format: :short) %></span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No recent documents.</p>
    <% end %>
  </div>
</div>
