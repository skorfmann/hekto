<%= content_for :title, "Batch Upload Documents" %>

<div class="container px-4 mx-auto my-8">
  <h1 class="h3 mb-4">Batch Upload Documents</h1>

  <%= form_with url: create_batch_upload_documents_path, local: true, method: :post, class: "bg-white dark:bg-gray-900 rounded-md shadow p-6", multipart: true do |form| %>
    <div class="mb-4">
      <%= form.label :files, "Select multiple files", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= form.file_field :files, multiple: true, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Upload Documents", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
